generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categories Category[]
  expenses   Expense[]
  trips      Trip[]
}

model Category {
  id        String   @id @default(cuid())
  name      String
  icon      String?
  color     String?
  userId    String
  createdAt DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses Expense[]

  @@unique([name, userId])
}

model Expense {
  id          String   @id @default(cuid())
  amount      Float
  description String?
  date        DateTime
  userId      String
  categoryId  String
  receiptUrl  String?
  tripId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  trip     Trip?    @relation(fields: [tripId], references: [id], onDelete: SetNull)

  @@index([userId, date])
  @@index([tripId])
}

model Trip {
  id          String    @id @default(cuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses Expense[]

  @@index([userId])
}